<div class="container rooms">
  <div class="row">
    <div class="col-sm-12">
      <!--<header>
      </header>-->

  <div class="col-sm-8">
      <h1><%= @artists.name %></h1>

      <%j=0%>
      <% @artists.albums.each do |x| %>
      <%if x.name? and x.name!=""%>
      <%j+=1%>
      <%else%>
      <%j%>
      <%end%>
      <%end%>
      <h2>Albums(<%= j %>)</h2>
      
   <% @artists.albums.each do |y| %>
     <div class="col-sm-3">
       <div class="panel panel-default">
          <div class="panel-body" style="max-height: 196px;">
           <img src="<%= y.image_url %>"  style="width: 100%;height:120px; " >
           <div class="details clearfix"><h6><strong><%= y.name %></strong> </h6></div>  
           <div class="details clearfix" ><h6 style="margin:0;"> <strong><%= y.released_at %></strong> </h6></div>
         </div>
       </div>
     </div>
   <% end %>
  </div>
  
  <div class="col-sm-4"><img src="<%= @artists.image_url %>" style="width: 133%;height: 347px;"></div>     
  </div>
  </div>
</div>